@model ZazaInc.Models.Vacacione

@{
    ViewBag.Title = "Delete";
}

<link href="~/CSS/Recursos/Operacion.css" rel="stylesheet" />
<p id="p" >Eliminando registro de vacaciones...</p>

<h4 style="color:#ff6a00; font-style:italic">¿Seguro que desea borrar este registro?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha Inicio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_inicio)
        </dd>

        <dt>
            Fecha Final
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_final)
        </dd>

        <dt>
            Nombre del Empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empleado.nombre_empleado)
        </dd>

        <dt>
            Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.nombre_usuario)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">

    <button id="botonRegistro" class="btn btn-primary">
        @Html.ActionLink("Volver al listado", "Index", new { @class = "addy" }, new { @class = "addy" })
    </button>

    <input id="botonRegistro" style="background-color:#ff6a00" class="btn btn-primary" type="submit" value="Eliminar" />
</div>
    }
</div>
