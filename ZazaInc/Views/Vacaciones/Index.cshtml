@model IEnumerable<ZazaInc.Models.Vacacione>

@{
    ViewBag.Title = "Index";
}
<link href="~/CSS/Recursos/Operacion.css" rel="stylesheet" />
<h2>Gestionando vacaciones...</h2>

<table class="table">
    <tr>
        <th>
            Fecha Inicio
        </th>
        <th>
            Fecha Final
        </th>
        <th>
            Nombre de Empleado
        </th>
        <th>
            Usuario
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_final)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.nombre_empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.nombre_usuario)
            </td>
            <td id="i">
                <button class="uo"> <img src="~/CSS/Recursos/lapiz.png"> @Html.ActionLink("Editar", "Edit", new { id = item.id_vacaciones })</button>
                <button class="uo1"> <img src="~/CSS/Recursos/informacion.png"> @Html.ActionLink("Detalles", "Details", new { id = item.id_vacaciones }, new { @class = "uo2" }) </button>
                <button class="uo4"> <img src="~/CSS/Recursos/eliminar.png"> @Html.ActionLink("Eliminar", "Delete", new { id = item.id_vacaciones } , new { @class = "uo3" })</button>
            </td>

        </tr>
    }

</table>
<button id="botonRegistro" class="btn btn-primary">
    @Html.ActionLink("Registrar vacaciones", "Create", new { @class = "addy" }, new { @class = "addy" })
</button>