@model IEnumerable<ZazaInc.Models.Solicitante>

@{
    ViewBag.Title = "Index";
}

<link href="~/CSS/Terminacion.css" rel="stylesheet" />

<h2>Gestionando Solicitantes...</h2>

<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Cedula
        </th>
        <th>
            Correo Electronico
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_Solicitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido_Solicitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cedula_Solicitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo_Solicitante)
            </td>
            <td id="i">
                <button class="uo"> <img src="~/CSS/Recursos/lapiz.png"> @Html.ActionLink("Editar", "Edit", new { id = item.id_Solicitante })</button>
                <button class="uo1"> <img src="~/CSS/Recursos/informacion.png"> @Html.ActionLink("Detalles", "Details", new { id = item.id_Solicitante }, new { @class = "uo2" }) </button>
                <button class="uo4"> <img src="~/CSS/Recursos/eliminar.png"> @Html.ActionLink("Eliminar", "Delete", new { id = item.id_Solicitante }, new { @class = "uo3" })</button>
            </td>
        </tr>
    }

</table>

<button id="botonRegistro" class="btn btn-primary">
    @Html.ActionLink("Agregar registro de Solicitantes", "Create", new { @class = "addy" }, new { @class = "addy" })
</button>
