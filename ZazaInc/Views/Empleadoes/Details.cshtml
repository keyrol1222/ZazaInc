@model ZazaInc.Models.Empleado

@{
    ViewBag.Title = "Details";
}

<link href="~/CSS/Recursos/Operacion.css" rel="stylesheet" />
<p id="p">Mostrando detalles...</p>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_empleado)
        </dd>

        <dt>
            Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido_empleado)
        </dd>

        <dt>
            Puesto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.posicion_empleado)
        </dd>

        <dt>
            Cedula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cedula_empleado)
        </dd>

        <dt>
            Correo Electronico
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo_usuario)
        </dd>

        <dt>
            Sueldo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pago_empleado)
        </dd>

        <dt>
            Horario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horario_empleado)
        </dd>

    </dl>
</div>

<button id="botonRegistro" class="btn btn-primary">
    @Html.ActionLink("Volver al listado", "Index", new { @class = "addy" }, new { @class = "addy" })
</button>

<button id="botonRegistro" class="btn btn-primary">
    @Html.ActionLink("Editar", "Edit", new { id = Model.id_empleado }, new { @class = "addy" })
</button>
