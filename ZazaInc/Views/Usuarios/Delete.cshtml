@model ZazaInc.Models.Usuario

@{
    ViewBag.Title = "Delete";
}

<link href="~/CSS/Terminacion.css" rel="stylesheet" />

<p id="p">Eliminando registro de Usuario...</p>

<h4 style="color:#ff6a00; font-style:italic">¿Seguro que desea borrar este registro?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_usuario)
        </dd>

        <dt>
            Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido_usuario)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rol_usuario)
        </dd>

        <dt>
            Cedula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cedula_usuario)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo_usuario)
        </dd>

        <dt>
            Contraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contraseña_usuario)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion_usuario)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">

            <button id="botonRegistro" class="btn btn-primary">
                @Html.ActionLink("Volver al listado", "Index", new { @class = "addy" }, new { @class = "addy" })
            </button>

            <input id="botonRegistro" style="background-color:#ff6a00" class="btn btn-primary" type="submit" value="Eliminar" />
        </div>
    }
</div>
